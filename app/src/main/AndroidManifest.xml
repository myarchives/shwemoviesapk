<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shwe.movies">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.shwe.movies.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.shwe.movies.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.shwe.movies.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" >

        </activity>

        <activity
            android:name="com.shwe.movies.IntroActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name="com.shwe.movies.SignInActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name="com.shwe.movies.SignUpActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name="com.shwe.movies.ProfileActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name="com.shwe.movies.ForgotPasswordActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name="com.shwe.movies.MovieDetailsActivity"
            android:configChanges="orientation|screenLayout|screenSize"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name="com.shwe.movies.SeriesDetailsActivity"
            android:configChanges="orientation|screenLayout|screenSize"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name="com.shwe.movies.TVDetailsActivity"
            android:configChanges="orientation|screenLayout|screenSize"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />


        <activity
            android:name="com.shwe.movies.EmbeddedPlayerActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="sensor" />

        <activity
            android:name="com.shwe.movies.AllCommentActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateHidden" />

        <activity
            android:name="com.shwe.movies.RelatedAllMovieActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.shwe.movies.SimpleVideoPlayer"
            android:screenOrientation="landscape" />

        <activity
            android:name="com.shwe.movies.RelatedAllChannelActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.shwe.movies.RelatedAllSeriesActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.shwe.movies.SearchActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.shwe.movies.SearchHorizontalActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.shwe.movies.SearchAllMovieActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.shwe.movies.SearchAllChannelActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.shwe.movies.SearchAllSeriesActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- Activity required to show ad overlays. -->
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />

        <meta-data
            android:name="com.onesignal.NotificationOpened.DEFAULT"
            android:value="DISABLE" />
        <meta-data
            android:name="com.onesignal.NotificationAccentColor.DEFAULT"
            android:value="FF1C6CC3" />

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_app_id" />

        <meta-data
            android:name="com.google.android.gms.cast.framework.OPTIONS_PROVIDER_CLASS_NAME"
            android:value="com.shwe.cast.CastOptionsProvider" />

        <activity
            android:name="com.shwe.cast.ExpandedControlsActivity"
            android:theme="@style/Theme.CastVideosDark" />

    </application>

</manifest>